<div class="ui info event-modal tiny modal" data-object="popup-email">
  <i class="close icon"></i>
  <div class="header">
    <img class="ui circular middle aligned image" alt="icon" src="https://cdn.glitch.global/108d8383-74d9-4080-9432-486b3f71ad74/email_38x38.png?v=1648214837403">
    Setup Email
  </div>    
  <div class="content">  
  
    <div id="errmsg_email" class="ui negative message">xyz
    </div>

    <div id="enroll_ui_email">
      <p>Send a verification code to {{userinfo.email}}.</p>

      <input id='enroll' class='ui primary button' type='button' value='Send code' onclick='enrollEmail("{{userinfo.email}}");' />
    </div>

    <div id="verify_ui_email">
      <p>A verification code was sent to {{userinfo.email}}. Check your email and enter the code below.</p>

      <div id="resend_ui_email" class="ui warning message">
        <p>Haven't received an email? <a href='javascript:null' onClick='javascript:resendEmail("{{userinfo.email}}");'>Send again</a></p>
      </div>

      <div class="ui expand">
        <div class="ui input">
          <input id="code_email" type="text" placeholder="Enter code" />
        </div>
      </div>      
      <input id='verify' class='ui primary button' type='button' value='Verify code' onclick='activateEmail();' />
    </div>
  
  </div>
</div>