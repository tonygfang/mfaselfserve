<div class="ui info event-modal tiny modal" data-object="popup-call">
  <i class="close icon"></i>
  <div class="header">
      <img class="ui circular middle aligned image" alt="icon" src="https://cdn.glitch.global/108d8383-74d9-4080-9432-486b3f71ad74/voicecall_38x38.png?v=1648214837268">
      Setup Voice Call
  </div>    
  <div class="content">  
  
    <div id="errmsg_call" class="ui negative message">
    </div>

    <div id="resend_msg_call" class="ui warning message">
      <p>Haven't received an call? To try again, click Redial.</p>
    </div>

    <div id="enroll_ui_call">
      <p>Enter phone number (country code optional, extension optional).</p> 
      <p>e.g. 780-123-4567, +178012345678</p>
      
      <div class="ui expand">
        <div class="ui input" style="width:300px">
          <input id="phone_call" type="text" placeholder="Enter phone" />
        </div>

        <div class="ui input" style="width:100px">
          <input id="ext_call" type="text" placeholder="Ext" />
        </div>
      </div>

      <input id='enroll_button_call' class='ui primary button' type='button' value='Call' onclick='enrollCall();' />
      <input id='resend_button_call' class='ui primary button' type='button' value='Redial' onclick='resendCall();' />

    </div>

    <div id="verify_ui_call">
     
      <div class="ui expand">
        <div class="ui input">
          <input id="code_call" type="text" placeholder="Enter code" />
        </div>
      </div>         
      
      <input id='activate_call' class='ui primary button' type='button' value='Verify' onclick='activateCall();' />
    </div>

  </div>
</div>

